<div>
    <h2>The event is: {{this.event.event_name}}</h2>
    <h2>The location is: {{this.event.location}}</h2>
    <h2>this is the eventId {{this.event.id}}</h2>
</div>
<form id="guestAdd" name="guestAdd" method="post" action="/guestlist/{{this.event.id}}">
    <div class="form-group">
        <label for="firstname">First name</label>
        <input type="text" name="firstname" class="form-control" placeholder="Joe">
    </div>
    <div class="form-group">
        <label for="lastname">Last name</label>
        <input type="text" name="lastname" class="form-control" placeholder="Smith">
    </div>
    <div class="form-group">
        <label for="phone">Phone #</label>
        <input type="text" name="phone" class="form-control" placeholder="+1-512-123-4567">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" id="userid" placeholder="you@domain.com">
    </div>
    <input type="submit" class="btn btn-primary btn-lg submit">
</form>

<hr />

<table>
    <thead>
        <tr>
            <th>Guest first name</th>
            <th>Guest last name</th>
            <th>Guest Phone</th>
            <th>Guest Email</th>
        </tr>
    </thead>
    <!--everyone triggers as a host idk why-->
    {{#each user_event}} {{#if this.host}}
    <tbody id="guest-container">
        <tr>
           <td>{{this.user.firstname}}</td>
            <td>{{this.user.lastname}}</td>
            <td>{{this.user.phone}}</td>
            <td>{{this.user.email}}</td>
            <td><a class="btn" href="/api/event/guests/{{this.eventId}}">Send a message!</a></td>
        </tr>
    </tbody>
    {{/if}} {{/each}}
</table>