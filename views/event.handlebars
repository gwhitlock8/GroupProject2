
    
    <form action="/event/:id/guest" method="POST">
        <input type="text" id="firstname" placeholder="First Name">
        <input type="text" id="lastname" placeholder="Last Name">
        <input type="text" id="phone" placeholder="Phone Number">
        <input type="text" id="attending" placeholder="Yes/No">
        <input type="button" class="add-row" value="Add Guest">
    </form>
    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Attending?</th>
            </tr>
        </thead>
        <tbody class="guest-container">
            <tr>
                <td><input type="checkbox" name="record"></td>
                <td>Bob</td>
                <td>Dole</td>
                <td>8326431415</td>
                <td>Yes</td>
            </tr>
            {{#each user}}
                {{#unless this.host}}
                <tr>
                    <td>{{this.firstname}}</td>
                    <td>{{this.lastname}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.attending}}</td>
                </tr>         
        </tbody>
    </table>
    <button type="button" class="send-message">Send Message</button>
    <button type="button" class="delete-row">Delete Row</button>
    
    <script src="/js/text-guests.js"></script>                               		