                        <input type="text" name="phone" class="form-control" placeholder="+15121234567">
                    </div>
                    <input class="btn" type="submit" value="Submit" />
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
