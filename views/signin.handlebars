<!DOCTYPE html>
<html>

<head>
    <title>Party Sherpa</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" id="btn-navmenu" class="disabled navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo"></div>
                <a class="navbar-brand" href="#">Party Sherpa</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <div id="profile">
                    <i class="fa fa-user pull-left" aria-hidden="true"></i>
                    <h3>Bob Hope</h3>
                    <p>Logged in with Facebook</p>
                </div>
                <p id="profile-phone"><i class="fa fa-phone" aria-hidden="true"></i> (555) 123-9999 <span class="btn btn-default"><i class="fa fa-pencil" aria-hidden="true"></i></span></p>
                <hr />
                <p><a class="btn btn-default btn-lg btn-block" href="/dashboard" id="btn-events">My Events</a></p>
                <p><a class="btn btn-default btn-lg btn-block" href="/signin" id="btn-logout">Log Out</a></p>
            </div>
        </div>
    </nav>

    <div class="container" id="splash">
        <h1>Party Sherpa</h1>
        <p class="logo"></p>
        <a class="btn btn-primary btn-lg btn-block" id="btn-login-fb" href="/auth/facebook"><i class="fa fa-facebook-official" aria-hidden="true"></i> Log in with Facebook</a>
        <hr />
        <p>Not a Facebook User?</p>
        <div class="half-wide pull-left">
            <button class="btn btn-default btn-lg btn-block" id="btn-login" data-toggle="modal" data-target="#modal-signup">Register</button>
        </div>
        <div class="half-wide pull-right">
            <button class="btn btn-default btn-lg btn-block" id="btn-login" data-toggle="modal" data-target="#modal-login">Log In</button>
        </div>
    </div>

    <!-- ================================================== -->
    <!-- =================     MODALS     ================= -->

    <div id="modal-login" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Log in (without Facebook)</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="userid">User ID</label>
                            <input type="email" class="form-control" id="userid" placeholder="you@domain.com">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default submit">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modal-signup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Sign Up (without Facebook)</h4>
                </div>
                <form id="signup" name="signup" method="post" action="/signup">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input name="email" type="email" class="form-control" id="userid" placeholder="you@domain.com">
                        </div>
                        <div class="form-group">
                            <label for="firstname">Firstname</label>
                            <input name="firstname" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="lastname">Lastname</label>
                            <input name="lastname" type="text" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="password">Confirm Password</label>
                            <input type="text" class="form-control" id="password-confirm" placeholder="Password">
                        </div>
                        <p class="alert alert-danger" role="alert"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ================================================== -->
    <!-- ================     SCRIPTS     ================= -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="/js/script.js"></script>
</body>

<script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: '1558493570849816',
            xfbml: true,
            version: 'v2.9'
        });
        FB.AppEvents.logPageView();
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

</script>

</html>